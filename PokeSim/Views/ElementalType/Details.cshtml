@model PokeSim.Models.ElementalType

@{
    string displayItem = "Elemental Type";
    ViewBag.Title = "Details for " + displayItem;
    string message = ViewBag.Message;
    PokeSim.Models.ElementalType currentItem = ViewBag.CurrentItem;
    bool isAdmin = ViewBag.IsAdmin;
}

<h2>@ViewBag.Title</h2>

<p style="color:red">@message</p>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            <label class="control-label col-md-2">@currentItem.Id</label>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            <label class="control-label col-md-2">@currentItem.Name</label>
        </dd>
    </dl>
</div>
@if (isAdmin)
{
    <br />
    <p>@Html.ActionLink("Edit", "Edit", new { id = currentItem.Id })</p>
    <p>@Html.ActionLink("Delete", "Delete", new { id = currentItem.Id })</p>
}
<br />
<p>
    @Html.ActionLink(displayItem + " Index", "Index") |
    @Html.ActionLink(displayItem + " Overview", "Overview")
</p>
